<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="question">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/small_margin</item>
        <item name="android:paddingBottom">@dimen/small_margin</item>
        <item name="android:paddingLeft">@dimen/mid_margin</item>
        <item name="android:paddingRight">@dimen/mid_margin</item>
        <item name="android:background">@drawable/question_text_bg</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="horizontal_radio_group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/huge_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="help_icon">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:src">@drawable/icon_help</item>
    </style>

    <style name="question_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/mid_margin</item>
        <item name="android:background">@drawable/question_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/small_margin</item>
        <item name="android:paddingTop">@dimen/huge_margin</item>
    </style>

    <style name="help_fifty">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/semi_big_margin</item>
        <item name="android:onClick">give50</item>
        <item name="android:src">@drawable/icon_fifty</item>
    </style>

    <style name="help_hint">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">@dimen/semi_big_margin</item>
        <item name="android:onClick">give50</item>
        <item name="android:src">@drawable/icon_hint</item>
    </style>

    <style name="">
        <item name=""></item>
        <item name=""></item>
        <item name=""></item>
        <item name=""></item>
        <item name=""></item>
    </style>
</resources>
